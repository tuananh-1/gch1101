{{!-- div.row>div.col*2 --}}
<div class="container text-center">
<div class="row">
    <div class="col">
        <h4>{{book.title}}</h4>
        <iframe width="400" height="250" src="https://www.youtube.com/embed/{{book.video}}" frameborder="0"></iframe>
    </div>
    <div class="col">
        {{!-- table>tr*4>th+td --}}
        <table class="table table-bordered">
            <tr class="cok bg-warning">
                <th colspan="2">Book Information</th>
            </tr>
            <tr>
                <th> Author</th>
                <td>{{book.author}}</td>
                
            </tr>
            <tr>
                <th> Price</th>
                <td>{{book.price}}</td>
            </tr>
            <tr>
                <th> In stock</th>
                <td>{{book.quantity}}</td>
            </tr>
            <tr>
                <th> Publishing date</th>
                <td>{{ dateFormat book.date "DD/MM/YYYY" }}</td>
            </tr>
            <tr>
                <th colspan="2">
                    <form action="#" m></form>
                    <input type="number" min="1" max="{{book.quantity}}">
                    <a href="#" class="btn btn-primary">Order</a>

                </th>
            </tr>
        </table>
    </div>
</div>
</div>